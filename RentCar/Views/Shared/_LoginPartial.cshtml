@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item">
            <a asp-controller="Accounts" asp-action="Index" class="nav-link">Ola @UserManager.GetUserName(User)!</a>
        </li>
        @if (User.IsInRole("Administrador"))
        {
            <li class="nav-item">
                <a asp-controller="Roles" asp-action="Index" method="post" class="nav-link">Niveis de Acesso</a>
            </li>
        }
        <li class="nav-item">
            <a asp-controller="Accounts" asp-action="Logout" method="post" class="nav-link">Sair</a>
        </li>
    </ul>
}
else
{
<ul class="nav navbar-nav navbar-right">
    <li class="nav-item">
        <a class="nav-link" asp-action="Register" asp-controller="Accounts">Registrar</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-action="Login" asp-controller="Accounts">Entrar</a>
    </li>
</ul>
}