@model IEnumerable<Address>

    <table class="table table-hover table-stripped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(x => x.Street)
                </th>
                <th>
                    @Html.DisplayNameFor(x => x.Number)
                </th>
                <th>
                    @Html.DisplayNameFor(x => x.District)
                </th>
                <th>
                    @Html.DisplayNameFor(x => x.City)
                </th>
                <th>
                    @Html.DisplayNameFor(x => x.State)
                </th>
                <th>Opções</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Street)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Number)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.District)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.State)
                    </td>
                    <td>
                        <button class="btn btn-outline-primary editAddress" data-id="@item.Id" data-toggle="tooltip" data-placement="top" title="Atualizar nível de acesso"><i class="fas fa-edit"></i></button>
                        <button class="btn btn-outline-danger delAddress" data-id="@item.Id" data-toggle="tooltip" data-placement="top" title="Excluir nível de acesso"><i class="fas fa-trash"></i></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
