@model ICollection<RentCar.Models.Account>

@{
    ViewData["Title"] = "Saldos";
}

<br />
<div class="text-center">
    @{
        if (TempData["confirm"] != null)
        {
            <p class="alert alert-success h6">
                @TempData["confirm"]
            </p>
        }
        else if (TempData["erro"] != null)
        {
            <p class="alert alert-danger h6">
                @TempData["erro"]
            </p>
        }
    }
</div>
<div class="border border-light rounded shadow">
    <div class="container">
        <p class="text-info h4">
            <i class="far fa-money-bill-alt fa-lg"></i> Saldos cadastrados
            <button class="btn btn-outline-default createBalace" data-toggle="tooltip" data-placement="right" title="Cadastrar saldo"><i class="fas fa-plus-circle fa-lg h4"></i></button>
        </p>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">
                        Usuário
                    </th>
                    <th scope="col">
                        Saldo
                    </th>
                    <th scope="col">Opções</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.User.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Balance)
                        </td>
                        <td>
                            <button class="btn btn-outline-primary editBalance" data-id="@item.Id" data-toggle="tooltip" data-placement="top" title="Atualizar saldo"><i class="fas fa-edit"></i></button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true"></div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

